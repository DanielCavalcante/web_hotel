<p id="notice"><%= notice %></p>
<h1><%= t('title.room.index') %></h1>
<%= link_to t('title.hotel.new'), new_room_path, class: 'btn btn-primary' %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.room.hotel') %></th>
      <th><%= t('activerecord.attributes.room.number') %></th>
      <th><%= t('activerecord.attributes.room.floor') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.floor %></td>
        <td><%= link_to t('actions.show'), room %></td>
        <td><%= link_to t('actions.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('actions.remove'), room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
